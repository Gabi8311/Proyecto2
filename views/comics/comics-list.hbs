 <div class="text-center">
<h1>Lista de Cómics</h1>
<hr>
    <div class="row">
        {{#each allComics}}
        <div class="col-6 text-center mt-5">
            <div class="card comic">
                <img src="{{coverImg}}" alt="Portada Cómic">
                <div class="card-body">
                    <h5 class="card-text">{{title}}</h5>
                      <a href="/comics/{{_id}}" class="btn btn-sm btn-danger text-warning ">Ver detalle</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
   
    <a href="/profile" class="btn btn-sm btn-danger text-warning m-5 pl-5 pr-5 mt-5">Volver</a>
    </div>