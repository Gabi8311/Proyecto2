<div class="registro mt-5">

    <h1 class="text-center mb-5">{{title}}</h1>

    <img src="{{coverImg}}" alt="cover image">
    <h3 class="mt-5">Descripción: {{description}}</h3>
    <hr>
    <h4>Actores: {{actors}}</h4>
    <hr>
    <h5>Año de estreno: {{year}}</h5>

    <a href="/movies" class="btn btn-sm btn-danger text-warning m-5">Volver al listado</a>
    <a href="/movies/{{_id}}/newComment" class="btn btn-sm btn-danger text-warning m-5">Deja tu comentario</a>
</div>

<h2 class="text-center registro mb-5">Opiniones sobre {{title}}</h2>
<hr>
<div class="row mb-5">
    {{#each comments}}

    {{>eachComments this}}

    {{/each}}
</div>

</div>